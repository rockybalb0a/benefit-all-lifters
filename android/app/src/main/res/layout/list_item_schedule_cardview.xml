<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="kr.valor.bal.data.WorkoutDetailAndSets" />
        
        <variable
            name="addSetListener"
            type="kr.valor.bal.adapters.listeners.ScheduleButtonListener" />

        <variable
            name="deleteSetListener"
            type="kr.valor.bal.adapters.listeners.ScheduleButtonListener" />

        <variable
            name="closeListener"
            type="kr.valor.bal.adapters.listeners.ScheduleButtonListener" />

        <variable
            name="setListener"
            type="kr.valor.bal.adapters.listeners.ScheduleSetListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/margin_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardCornerRadius="@dimen/cardview_corner_radius_default"
        app:cardElevation="@dimen/cardview_elevation_default">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/workout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_large"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@color/secondaryColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:workoutName="@{item}"
                tools:text="Barbell Back Squat" />

            <ImageButton
                style="@style/Theme.BenefitAllLifters.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_close_24"
                android:layout_margin="@dimen/margin_medium"
                android:onClick="@{() -> closeListener.onClick(item)}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <LinearLayout
                android:id="@+id/sets_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/workout_title"
                app:workoutSets="@{item}"
                app:setListener="@{setListener}"/>

            <Button
                android:id="@+id/empty_add_set_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="@{() -> addSetListener.onClick(item)}"
                android:text="add set"
                style="@style/Widget.BenefitAllLifters.Button"
                app:icon="@drawable/ic_baseline_add_24"
                app:iconGravity="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/workout_title" />

            <Button
                android:id="@+id/exist_add_set_button"
                style="@style/Widget.BenefitAllLifters.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="add set"
                android:visibility="gone"
                android:onClick="@{() -> addSetListener.onClick(item)}"
                app:icon="@drawable/ic_baseline_add_24"
                app:iconGravity="textStart"
                app:layout_constraintEnd_toStartOf="@+id/exist_delete_set_button"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sets_detail" />

            <Button
                android:id="@+id/exist_delete_set_button"
                style="@style/Widget.BenefitAllLifters.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="delete set"
                android:visibility="gone"
                android:onClick="@{() -> deleteSetListener.onClick(item)}"
                app:icon="@drawable/ic_baseline_remove_24"
                app:iconGravity="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/exist_add_set_button"
                app:layout_constraintTop_toBottomOf="@id/sets_detail" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>